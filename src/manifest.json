{
  "manifest_version": 3,
  "name": "Search Translate",
  "version": "0.2.1",
  "description": "Real-time translation suggestions for search engines - translate Chinese to English for better search results",
  "author": "Your Name",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.google.com.hk/*",
        "*://*.baidu.com/*",
        "*://*.bing.com/*",
        "*://github.com/*",
        "*://*.stackoverflow.com/*",
        "*://*.stackexchange.com/*"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options/index.html",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.google.com.hk/*",
    "*://*.baidu.com/*",
    "*://*.bing.com/*",
    "*://github.com/*",
    "*://*.stackoverflow.com/*",
    "*://*.stackexchange.com/*",
    "https://api.mymemory.translated.net/*",
    "https://fanyi.baidu.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
